<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF90A1F7">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_sunny" />

    <LinearLayout
        android:id="@+id/text_view_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_view_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tomorrow"
            android:textColor="@color/textColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_view_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Sunny"
            android:textColor="@color/textColor"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_temp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@id/text_view_time2"
        android:text="15&#x2103; - 28&#x2103;"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

</RelativeLayout>