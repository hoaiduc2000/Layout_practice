<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.nguyenhoaiduc.layout_practice.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:padding="20dp"
    android:background="#FFF96A6A">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paris"
        android:textSize="30dp"
        android:textColor="@color/textColor"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Updated 42 mins ago"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:id="@+id/tv_time"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="23&#x2103;"
        android:id="@+id/tv_temp"
        android:textColor="@color/textColor"
        android:textSize="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/tv_location"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sunny"
        android:id="@+id/iv_status"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_location"
        android:layout_toRightOf="@+id/tv_temp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sunny"
        android:textColor="@color/textColor"
        android:layout_marginLeft="45dp"
        android:layout_below="@+id/tv_temp"
        android:id="@+id/tv_status"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="7 mph"
        android:textColor="@color/textColor"
        android:layout_marginLeft="40dp"
        android:id="@+id/tv_wind"
        android:layout_below="@+id/tv_temp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tv_status"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="16&#x2103;  -  27&#x2103;"
        android:textColor="@color/textColor"
        android:id="@+id/tv_temp2"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/tv_temp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tv_wind"/>
</RelativeLayout>

 <ListView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:background="#FFA9B2E7"
     android:id="@+id/lv_item"
     android:layout_weight="0.5">

 </ListView>
</LinearLayout>
